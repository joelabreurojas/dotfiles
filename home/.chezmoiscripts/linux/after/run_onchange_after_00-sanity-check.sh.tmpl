#!/bin/bash
{{ template "bash_loggers" . }}

log_work "Sanity check for {{ .os_id }}"
log_info "Headless: {{ .is_headless }}"
log_info "Username: {{ .username }}"
log_info "Email:    {{ .email }}"

{{ if eq .environment "minimal" -}}
log_info "Minimal environment detected. No secrets will be synced."
{{- else -}}
log_info "Trusted environment detected ({{ .environment }}). Ready for full setup."
{{- end }}
